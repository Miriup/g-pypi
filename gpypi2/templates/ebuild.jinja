# Ebuild generated by g-pypi {{ gpypi_version }}
{% if warnings -%}
    {% for warn in warnings %}
    # Warning: {{ warn }}
    {% endfor %}
{%- endif %}
EAPI="3"
SUPPORT_PYTHON_ABIS="1"
{% if tests_method %}
DISTUTILS_SRC_TEST="{{ tests_method }}"
{% endif %}

inherit {{ inherit|join(" ") }}

{% for value in my_pn %}
MY_PN="{{ value }}"
{% endfor %}
{% for value in my_pv %}
MY_PV="{{ value }}"
{% endfor %}
{% if my_p %}MY_P="{{ my_p }}"{% endif %}

DESCRIPTION="{{ description }}"
HOMEPAGE="{{ homepage|join(" ") }}"
{% if esvn_repo_uri %}
ESVN_REPO_URI="{{ esvn_repo_uri }}"
{% else %}
{# TODO: SRC_URI="{{ src_uri|join(" ") }}" #}
SRC_URI="{{ src_uri }}"
{% endif %}

LICENSE="{{ license }}"
KEYWORDS="{{ keywords }}"
SLOT="{{ slot }}"
IUSE="{{ use|join(" ") }}"

{% if depend %}
DEPEND="{{ depend|join("\n\t") }}"
{% endif %}
{% if depend and depend == rdepend %}
DEPEND="${RDEPEND}"
{% elif rdepend %}
RDEPEND="{{ rdepend|join("\n\t") }}"
{% endif %}

{% if s %}
S="{{ s }}"
{% endif %}
{% if python_modname %}
PYTHON_MODNAME="{{ python_modname|join(" ") }}"
{% endif %}

{% if src_install %}
src_install() {
    distutils_src_install
    {% if 'docs' in use %}
    if use doc; then
        dodoc -r {{ docs_dir }}
    fi
    {% endif %}
    {% if 'examples' in use %}
    if use examples; then
        insinto /usr/share/doc/"${PF}"/
        doins -r {{ examples_dir }}
    fi
    {% endif %}
}
{% endif %}
